<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/black"
        >
    <ImageView
            android:id="@+id/title_back_btn"
            android:src="@drawable/title_back_white_selector"
            android:scaleType="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <TextView
            android:id="@+id/title_text_title"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/title_right_btn"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="17sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    <!-- 当title右边是图片的时候可以用这个代替-->
    <ImageView
            android:id="@+id/title_right_img_btn"
            android:paddingLeft="7dp"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:gravity="center"
            android:visibility="gone"
            android:src="@drawable/title_done_white_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
</RelativeLayout>