<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:id="@+id/footer_fl_inner"
            android:background="#00000000"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/footer_height"
            android:paddingBottom="@dimen/header_footer_top_bottom_padding"
            android:paddingLeft="@dimen/header_footer_left_right_padding"
            android:paddingRight="@dimen/header_footer_left_right_padding"
            android:paddingTop="@dimen/header_footer_top_bottom_padding"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:clipChildren="false">
            <ImageView
                    android:id="@+id/pull_to_refresh_footer_circlerefresh"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/loadmore_progress"/>
            <TextView
                    android:id="@+id/pull_to_refresh_footer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginLeft="8dp"
                    android:textSize="12sp"
                    android:textColor="#CBCFD2"
                    android:layout_gravity="center_vertical"
                    android:text="@string/pull_to_refresh_footer_loading"/>
        </LinearLayout>
    </RelativeLayout>

</merge>