<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:background="@android:color/transparent"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="290dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/common_dialog_content"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColor="@color/dialog_content_color"
                android:textSize="17sp"
                android:background="@drawable/common_dialog"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

        <TextView
                android:id="@+id/common_dialog_btn_ok"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/string_ok"
                android:background="@drawable/alert_dialog_one_btn_selector"
                android:textSize="16sp"
                android:textColor="@color/dialog_btn_color"
                android:gravity="center"
                />

    </LinearLayout>
</LinearLayout>